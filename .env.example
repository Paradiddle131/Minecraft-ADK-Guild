# Minecraft Server Configuration
MC_SERVER_HOST=localhost
MC_SERVER_PORT=25565
MC_BOT_USERNAME=MinecraftAgent
MC_BOT_AUTH=offline  # offline for local servers, microsoft for online

# ADK Configuration
ADK_MODEL=gemini-2.0-flash
ADK_API_KEY=your_api_key_here
ADK_SESSION_TIMEOUT=3600

# Bridge Configuration
JSPY_COMMAND_TIMEOUT=5000
JSPY_BATCH_SIZE=10
BRIDGE_PORT=8765  # WebSocket port for event streaming

# Redis Configuration (optional, for state persistence)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json  # json or pretty

# Monitoring
PROMETHEUS_PORT=9090
ENABLE_MONITORING=true
